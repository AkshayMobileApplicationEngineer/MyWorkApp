<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Discount Tag -->
        <TextView
            android:id="@+id/discount_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/discount_background"
        android:padding="4dp"
        android:text="$30.0 OFF"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_favorite" />

        <!-- Pizza Image -->
        <ImageView
            android:id="@+id/pizza_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/discount_tag"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/simple_pizza_image" />

        <!-- Add to Cart Button -->
        <ImageButton
            android:id="@+id/add_to_cart_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/pizza_image"
            android:layout_alignEnd="@id/pizza_image"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Add to cart" />

        <!-- Pizza Name -->
        <TextView
            android:id="@+id/pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pizza_image"
            android:layout_marginTop="8dp"
            android:text="Meat Pizza"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Restaurant Name -->
        <TextView

            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pizza_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="Hungry Puppets"
            android:textColor="#FF0606"
            android:textSize="14sp" />

        <!-- Rating Bar and Review Count -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurant_name"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:numStars="5"
                android:rating="4.7"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:stepSize="0.1"
                android:isIndicator="true" />

            <TextView
                android:id="@+id/review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(3)"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Price Section -->
        <LinearLayout
            android:id="@+id/price_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <!-- Original Price -->
            <TextView
                android:id="@+id/original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_toStartOf="@id/discounted_price"
                android:layout_toLeftOf="@id/discounted_price" />

            <!-- Discounted Price -->
            <TextView
                android:id="@+id/discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="$370"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
