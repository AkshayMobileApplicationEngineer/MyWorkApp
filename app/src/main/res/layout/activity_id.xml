<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

 <androidx.core.widget.NestedScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <!-- ID Card Layout -->
         <androidx.cardview.widget.CardView
             android:id="@+id/idCardLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="16dp"
             app:cardCornerRadius="8dp"
             app:cardElevation="4dp"
             app:cardBackgroundColor="#ffffff">

             <LinearLayout
                 android:id="@+id/studentDetails"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:id="@+id/collegeName"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Ramgovind University of Science and Technology"
                     android:textSize="18sp"
                     android:paddingVertical="10dp"
                     android:textStyle="bold"
                     android:textColor="#FFFFFF"
                     android:textAlignment="center"
                     android:background="@color/appOne"
                     android:layout_marginBottom="8dp"
                     />

                 <ImageView
                     android:id="@+id/studentImage"
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:src="@drawable/image3" />

                 <TextView
                     android:id="@+id/studentName"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Pinki Kumari"
                     android:textColor="#2E3A59"
                     android:textAlignment="center"
                     android:layout_gravity="center_horizontal"
                     android:textSize="24sp"
                     android:textStyle="bold"
                     android:layout_marginBottom="8dp" />

                 <TextView
                     android:id="@+id/studentId"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="ID: 123456"
                     android:paddingLeft="10dp"
                     android:textSize="18sp"
                     android:layout_marginTop="8dp" />

                 <TextView
                     android:id="@+id/department"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Department: Computer Science"
                     android:textSize="18sp"
                     android:paddingLeft="10dp"
                     android:layout_marginTop="8dp"
                     />



                 <TextView
                     android:id="@+id/collegeAddress"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="XYZ College, City, Country"
                     android:textSize="16sp"
                     android:paddingLeft="10dp"
                     android:paddingVertical="10dp"
                     android:layout_marginTop="8dp"
                     />
                 <TextView
                     android:layout_below="@+id/studentDetails"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@color/appOne"
                     android:text="College email: info@rgtu.ac.in\nWebsite: www.rgtu.net"
                     android:textSize="16sp"
                     android:paddingLeft="10dp"
                     android:paddingVertical="10dp"
                     android:textAlignment="center"
                     android:layout_gravity="center_horizontal"
                     android:textColor="#FFFFFF"
                     android:layout_marginTop="8dp"
                     />

             </LinearLayout>


         </androidx.cardview.widget.CardView>
         <Button
             android:id="@+id/shareButton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="20dp"
             android:text="Share ID Card" />
     </LinearLayout>
 </androidx.core.widget.NestedScrollView>

</LinearLayout>
