<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#f8f8f8"
    android:paddingTop="50dp">

    <!-- ScrollView as the only direct child of the LinearLayout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
    android:layout_weight="1">

    <!-- A single LinearLayout that holds all the content inside the ScrollView -->
    <LinearLayout
        android:id="@+id/CetrifaceteLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <!-- Certificate Header -->
        <TextView
            android:id="@+id/certificateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate of Completion"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#2E3A59"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Certification Paragraph -->
        <TextView
            android:id="@+id/certificationParagraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This certificate is awarded in recognition of the successful completion of the course and the dedication shown by the participant in gaining knowledge and skills. It is a testament to the hard work and commitment demonstrated throughout the course period. The recipient of this certificate has proven their abilities in the field and is fully capable of applying the skills learned."
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:lineSpacingExtra="4dp"/>

        <!-- Recipient Name Placeholder -->
        <TextView
            android:id="@+id/recipientNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="22sp"
            android:textColor="#2E3A59"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Additional Certificate Info -->
        <TextView
            android:id="@+id/courseNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course: Android Development"
            android:textSize="22sp"
            android:textColor="#2E3A59"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Registration Date -->
        <TextView
            android:id="@+id/registrationDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Date: 2024-12-01"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Email -->
        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: johndoe@example.com"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Signature and Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authorized Signature"
                android:textSize="18sp"
                android:textColor="#2E3A59"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2024-12-01"
                android:textSize="18sp"
                android:textColor="#2E3A59"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Certificate"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</ScrollView>
    </LinearLayout>
