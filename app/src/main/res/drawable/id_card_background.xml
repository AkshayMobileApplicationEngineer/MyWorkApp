<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded Corners -->
    <corners android:radius="12dp" />

    <!-- Border (Optional) -->
    <stroke
        android:color="#174ACE"
    android:width="2dp" />

    <!-- Gradient (Optional) -->
    <gradient
        android:startColor="#FDFFFD"
        android:endColor="#C4DCC6"
        android:angle="45" />

    <!-- Shadow (Optional) -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
</shape>
